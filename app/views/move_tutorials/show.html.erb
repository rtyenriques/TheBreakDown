<h2><%=@move.name.capitalize %></h2>

Category: <%= link_to @move.category.name, category_path(@move.category)%><br>
Difficulty: <%= @move.difficulty%><br>
Learn Time: <%= @move.learn_time%><br>
Desciption: <%= @move.description%><br>

<% if @move.user_id == @user%>
<%= link_to 'edit', edit_move_tutorial_path(@move)%>
<%= link_to 'delete', move_tutorial_path(@move), method: :delete%>

<%end%>



<h4>Add a comment</h4>

<%= form_for @move.comments.build do |f|%>
<%=f.hidden_field :move_tutorial_id%>
Title:<%= f.text_field :title%><br>
Content:<%= f.text_area :content%><br>
Rating:<%= f.number_field :rating, :placeholder => 'number from 1-5'%>
<%= f.submit %>
<%end%>


<% if @move.comments.count < 1%>
<p>There is <%= pluralize(@move.comments.count, 'comment')%></p>
<%else%>
<p>There are <%= pluralize(@move.comments.count, 'comment')%></p>
<%end%>


<%= link_to 'view all comments', category_move_tutorial_comments_path(@move.category_id, @move.id)%>

 

