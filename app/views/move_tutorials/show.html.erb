<div class="mt-4 container border border-dark text-center">
<h1><%= @move_tutorial.name.capitalize %></h1>



Category: <%= link_to @move_tutorial.category.name, category_path(@move_tutorial.category) %><br>
Difficulty: <%= @move_tutorial.difficulty %><br>
Learn Time: <%= @move_tutorial.learn_time %><br>
Description: <%= @move_tutorial.description %><br>
Created By: <%= @move_tutorial.user.username %><br>

<% if @move_tutorial.user_id == @user %>
<%= link_to "Edit Move", edit_move_tutorial_path(@move_tutorial) %><br>
<%= link_to "Delete Move", move_tutorial_path(@move_tutorial), method: :delete %>

<% end %>

</div>

<div class="mt-4 border border-dark container text-center">
<h3>Comment and Rate</h3>
 <%= form_for @move_tutorial.comments.build do |f| %>

<%= f.hidden_field :move_tutorial_id %>

<div class="mb-1">
<%= f.label :title, class: "form-label" %>
<%= f.text_field :title, class: "form-control" %><br>
</div>

<div class="mb-1">
<%= f.label :content, class: "form-label" %>
<%= f.text_area :content, class: "form-control" %><br>
</div>

<div class="mb-1">
<%= f.label :rating, class: "form-label" %>
<%= f.number_field :rating, :placeholder => "number from 1-5", class: "form-control" %>
</div>
<%= f.submit class: "btn btn-primary" %>

<% end %>

<div class="mt-3">
<%= link_to "View #{pluralize(@move_tutorial.comments.count, "comment")}", category_move_tutorial_comments_path(@move_tutorial.category_id, @move_tutorial.id) %>
</div>

 </div>