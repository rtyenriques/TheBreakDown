<h2><%=@move_tutorial.name.capitalize %></h2>

Category: <%= link_to @move_tutorial.category.name, category_path(@move_tutorial.category)%><br>
Difficulty: <%= @move_tutorial.difficulty%><br>
Learn Time: <%= @move_tutorial.learn_time%><br>
Description: <%= @move_tutorial.description%><br>
Created By: <%= @move_tutorial.user.username%><br>

<% if @move_tutorial.user_id == @user%>
<%= link_to 'Edit Move', edit_move_tutorial_path(@move_tutorial)%><br>
<%= link_to 'Delete Move', move_tutorial_path(@move_tutorial), method: :delete%>

<%end%>



<h4>Add a comment</h4>


<%= form_for @move_tutorial.comments.build do |f|%>


<%=f.hidden_field :move_tutorial_id%>
Title:<%= f.text_field :title%><br>
Content:<%= f.text_area :content%><br>
Rating:<%= f.number_field :rating, :placeholder => 'number from 1-5'%>
<%= f.submit %>
<%end%>


<% if @move_tutorial.comments.count < 2%>
<p>There is <%= pluralize(@move_tutorial.comments.count, 'comment')%></p>
<%else%>
<p>There are <%= pluralize(@move_tutorial.comments.count, 'comment')%></p>
<%end%>


<%= link_to 'view all comments', category_move_tutorial_comments_path(@move_tutorial.category_id, @move_tutorial.id)%>

 

