<h1>Create a new Move Tutorial</h1>

<%= form_for(@move_tutorial) do |f| %>
  <%= f.label "Category:" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_blank: true %>
  <%= f.fields_for :categories, @move_tutorial.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>


<%= f.label :name %>
<%= f.text_field :name %>
<%- f.label :difficulty %>
Difficulty<%= f.text_field :difficulty %>
<%= f.label :learn_time %>
<%= f.text_field :learn_time %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.submit 'Create Move Tutorial' %>
<%end%>